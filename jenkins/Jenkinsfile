pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Etapa de build
                echo 'Iniciando o processo de build...'
                bat 'mvn clean package -DskipTests=true'
            }
        }
        stage('Tests') {
            steps {
                // Executa os testes
                echo 'Executando testes...'
                bat 'mvn test -Dtest=Executa'
            }
            post {
                always {
                    // Publica os resultados dos testes no formato JUnit
                    // Ajuste o caminho conforme necessário, considerando onde os arquivos de relatório estão sendo gerados
                    junit '**/target/surefire-reports/TEST-*.xml'  // Caminho para os relatórios JUnit
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Iniciando deploy...'
                bat 'mvn deploy'
            }
        }
    }
    post {
        always {
            // Limpeza ou ações finais
            echo 'Pipeline finalizado!'
        }
    }
}
