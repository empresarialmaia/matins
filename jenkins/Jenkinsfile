pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package -DskipTests=true'
            }
        }
        stage('Tests') {
            steps {
                bat 'mvn test'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'target/surefire-reports/*.xml', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
    }
}