pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'MAVEN_HOME'
    }

    environment {
        TEST_REPO = 'https://github.com/empresarialmaia/matins'
        TEST_DIR = 'matins'
        DESTINO = "C:\\Desenvolvimento\\deploy\\projetoMantis\\target\\"
        ARTEFATO = "${TEST_DIR}\\target\\projetoMantis-0.0.1-SNAPSHOT.jar"
    }

    stages {
        stage('Checkout, Build, and Test') {
            steps {
                echo 'Clonando repositório e construindo a aplicação'
                git branch: 'main', url: "${TEST_REPO}"
                bat 'mvn clean install -f ${TEST_DIR}/pom.xml'
                bat 'mvn test -Dtest=Executa -f ${TEST_DIR}/pom.xml'
            }
        }

        stage('Build Artefato') {
            steps {
                echo 'Criando o artefato final'
                bat 'mvn clean package -DskipTests=true -f ${TEST_DIR}/pom.xml'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Iniciando o deploy...'
                bat "if not exist ${DESTINO} mkdir ${DESTINO}"
                bat "if exist ${ARTEFATO} copy ${ARTEFATO} ${DESTINO} || echo Artefato não encontrado!"
            }
        }
    }

    post {
        always {
            echo 'Gerando status report'
            script {
                def status = currentBuild.result == 'SUCCESS' ? 'Pipeline executada com sucesso' : 'EXECUÇÃO DA PIPELINE FALHOU'
                echo status
            }
        }
    }
}
