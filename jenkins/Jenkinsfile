pipeline {
    agent any

    environment {
       MAVEN_HOME = C:\Program Files\apache-maven-3.9.4
       DEPLOY_PATH = 'C:\\Users\\hercu\\eclipse-workspace\\mantis\\deploy\\target\\'  
      MAVEN_REPO_URL = 'https://repo.maven.apache.org/maven2'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/empresarialmaia/matins.git', branch: 'main'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean package -DskipTests=true'
                bat 'mvn test -Dtest=Executa'
            }
        }

        stage('Deploy') {
            steps {
                bat 'mvn deploy -DaltDeploymentRepository=repo-id::default::${MAVEN_REPO_URL}'
                script {
                    def artefato = "C:\\Users\\hercu\\eclipse-workspace\\mantis\\projetoMantis\\target\\projetoMantis-0.0.1-SNAPSHOT.jar"
                    if (fileExists(artefato)) {
                        sshPublisher(publishers: [
                            sshPublisherDesc(
                                configName: 'SSH_Config',
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: artefato,
                                        remoteDirectory: DEPLOY_PATH,
                                        execCommand: 'java -jar ${DEPLOY_PATH}/projetoMantis-0.0.1-SNAPSHOT.jar'
                                    )
                                ]
                            )
                        ])
                    } else {
                        error "Artefato n√£o encontrado: ${artefato}"
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado!'
        }

        success {
            echo 'Deploy realizado com sucesso!'
        }

        failure {
            echo 'Falha no pipeline. Verifique os logs.'
        }
    }
}
