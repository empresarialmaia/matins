pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package -DskipTests=true'
            }
        }
        stage('Tests') {
            steps {
                bat 'mvn test'
            }
        }
    
    post {
    always {
        junit 'target/surefire-reports/*.xml'
    }
}
}